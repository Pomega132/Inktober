    <defs>
        <!-- x1,y1 -> début ; x2,y2 -> fin -->
        <linearGradient id="gLin" x1="0%" y1="100%" x2="100%" y2="000%">
            <stop offset="45%" stop-color="#000" />
            <stop offset="100%" stop-color="#333" />
        </linearGradient>
        <filter id="bevel" x="-30%" y="-50%" width="160%" height="220%">
            <!-- height map depuis l’alpha -->
            <feGaussianBlur in="SourceAlpha" stdDeviation="2.2" result="height" />
            <!-- lumière diffuse (mat) -->
            <feDiffuseLighting in="height" surfaceScale="4" diffuseConstant="1.2" lighting-color="#ffffff" result="diff">
                <feDistantLight azimuth="225" elevation="40" />
            </feDiffuseLighting>
            <!-- lumière spéculaire (brillance) -->
            <feSpecularLighting in="height" surfaceScale="4" specularConstant="0.6" specularExponent="20" lighting-color="#ffffff" result="spec">
                <feDistantLight azimuth="225" elevation="40" />
            </feSpecularLighting>
            <!-- on garde la lumière à l’intérieur des lettres -->
            <feComposite in="diff" in2="SourceAlpha" operator="in" result="diffIn" />
            <feComposite in="spec" in2="SourceAlpha" operator="in" result="specIn" />
            <!-- mélange des composantes + couleur de base -->
            <feComposite in="SourceGraphic" in2="diffIn" operator="arithmetic" k1="1" k2="1" k3="0" k4="0" result="basePlusDiff" />
            <feComposite in="basePlusDiff" in2="specIn" operator="arithmetic" k1="1" k2="1" k3="0" k4="0" />
        </filter>

        <!-- Dégradé métal doux pour le remplissage -->
        <linearGradient id="metal" x1="0" y1="0" x2="0" y2="1">
            <stop offset="0" stop-color="#111112" />
            <stop offset=".5" stop-color="#282b2e" />
            <stop offset="1" stop-color="#0a0a0a" />
        </linearGradient>
